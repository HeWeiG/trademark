/* pages/trademark-classes/trademark-classes.wxss */

/* 页面整体 - 极简背景 */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 0;
}

/* 列表容器 */
.list-container {
  padding: 20rpx 0;
}

/* 分类项目 - 紧凑单行卡片 */
.class-item {
  background: #ffffff;
  margin: 0 24rpx 16rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  position: relative;
  border-left: 4rpx solid;
}

.class-item:active {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 左侧图标 */
.item-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  font-size: 32rpx;
}

/* 中间内容区域 - 单行布局 */
.item-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 0; /* 防止文本溢出 */
}

.class-info {
  display: flex;
  align-items: baseline;
  flex: 1;
  min-width: 0;
  margin-right: 20rpx;
}

.class-code {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a73e8;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.class-name {
  font-size: 30rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  margin-right: 20rpx;
}

.trademark-count {
  font-size: 26rpx;
  color: #666666;
  background: #f8f9fa;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  border: 1rpx solid #f0f0f0;
}

/* 右侧箭头 */
.item-arrow {
  margin-left: 12rpx;
  color: #dddddd;
  flex-shrink: 0;
}

.icon-arrow {
  font-size: 32rpx;
  font-weight: 300;
}

